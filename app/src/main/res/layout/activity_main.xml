<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F4DB35">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4DB35">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemo_hollow"
                android:text="Who's That Pokemon?"
                android:textColor="#1D4FCD"
                android:textStyle="bold"
                android:textSize="32sp"
                android:gravity="center">

            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_IMG_pokeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                app:srcCompat="@drawable/alakazam"
                android:scaleType="centerCrop"
                android:tag="Alakazam"
                >

            </androidx.appcompat.widget.AppCompatImageView>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">

                <Button
                    android:id="@+id/main_BTN_AnswerA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Answer A"
                    android:fontFamily="@font/pokemon_solid"
                    android:textSize="25dp"
                    android:textAllCaps="false"
                    android:textColor="#FFF8F8"
                    android:maxLines="1">

                </Button>

                <Button
                    android:id="@+id/main_BTN_AnswerB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Answer B"
                    android:fontFamily="@font/pokemon_solid"
                    android:textSize="25dp"
                    android:textAllCaps="false"
                    android:textColor="#FFF8F8"
                    android:maxLines="1">

                </Button>


            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">

                <Button
                    android:id="@+id/main_BTN_AnswerC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Answer C"
                    android:fontFamily="@font/pokemon_solid"
                    android:textSize="25dp"
                    android:textAllCaps="false"
                    android:textColor="#FFF8F8"
                    android:maxLines="1">

                </Button>
                <Button
                    android:id="@+id/main_BTN_AnswerD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Answer D"
                    android:fontFamily="@font/pokemon_solid"
                    android:textSize="25dp"
                    android:textAllCaps="false"
                    android:textColor="#FFF8F8"
                    android:maxLines="1">

                </Button>


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_pokeball1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>
            <ImageView
                android:id="@+id/main_IMG_pokeball10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pokeball"
                android:visibility="invisible">

            </ImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>